<nav class="cabecera p-2 ">
<div class="row ">
  <div class="col-2 col-lg-3 d-flex justify-content-center">
    <a href="index"><img src="../imagenes/logo.png" alt="" style="max-height: 40px;"></a>
  </div>
  <div class="col-4  col-lg-5 justify-content-center">
    <form class="d-flex" action="/links/search" method="post">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
      <button type="sumbit" class="btn btn-outline-light" type="submit">Search</button>
    </form>
  </div>
  <div class="col-6 col-lg-4 d-flex pt-2 justify-content-evenly">
    <a href="#" class="text-light text-bold">Contactanos</a>
    <a href="#" class="text-light">Â¿quienes somos?</a>
    <a href="/links/signup" class="text-light">log-out</a>
  </div>
</div>
</nav>
<main class="container text-center">
  <div class="row bg">
    <div class="d-flex justify-content-center {{hide}}" style="width: 100%;">
      <h3 class="text-muted">NOT FOUND</h3>
    </div>
    <div class="col-12 col-lg-7 bg-light bg">
      {{#each result}}
      <div class="row">
        <div class="card shadow-sm">
          <div class="row">
            <div class="col-3">
              <div class="pt-3">
                <img src="/imagenes/{{url_image}}" class="img-fluid rounded"  style="max-width: 130px;" >
              </div>
            </div>
            <div class="col-9">
              <div class="card-body ">
                <div class="addcard d-flex card-title">
                  <h4 class="">{{name}}</h4>
                  <small class="text-muted ms-auto"> horario  {{open_time}}-{{end_time}}</small>
                </div>
                <div class="d-flex justify-content-start">
                  <small class="text-muted ">{{phone}}</small>
                </div>
                <div class="d-flex justify-content-end">
                  <a href="/links/placeproduct/{{name}}" class="btn btn-success ms-auto">productos</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="shopping_car col-12 col-lg-5 border shadow bg">
      {{#each cart}}
      <div class="row">
        <div class="p-4">
          <img class = "rounded-circle" src="../imagenes/{{url_image}}" style="max-width: 50px;">
          <div class="d-flex justify-content-start">
            <h5>{{name}}</h5>
          </div>
          <div class="d-flex ">
            <small class="text-muted ">{{description}}</small>
            <p class="ms-auto">Cantidad : {{cant}}</p>
          </div>
          <div class="d-flex ">
            <a>${{price}}</a>
            <a class="btn btn-outline-danger ms-auto"><i class="fas fa-trash"></i></a>
          </div>
        </div>
        <hr>
      </div>
      {{/each}}
      <div class="d-flex justify-content-end mb-3 {{hide}}">
        <button class="btn btn-danger m-2">borrar todo</button>
        <button class="btn btn-success m-2">comprar</button>
      </div>
    </div>
  </div>
  <div class="footer"></div>
</main>